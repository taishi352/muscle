<!DOCTYPE html>
<html>
  <head>
    <title>I'LL BE ..</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Sawarabi+Gothic" rel="stylesheet">
  </head>

  <body>

    <!-- ヘッダー部 -->
    <header class="navbar navbar-fixed-top">
      <div class="container">

        <nav class="nav navbar-nav navbar-right">
          <span><%= current_user.name %>さん、ごきげんよう！</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-left">
            <!--if文でサインインとアウト時の表示を変更-->
            <% if user_signed_in? %>
            <li><%= link_to ' マイページ', user_path(current_user), class: 'glyphicon glyphicon-home home' %></li>
            <li><%= link_to ' 会員一覧', users_path, class: 'glyphicon glyphicon-user users' %></li>
            <li><%= link_to ' 投稿一覧', posts_path, class: 'glyphicon glyphicon-book books' %></li>
            <li><%= link_to ' ログアウト', destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out logout' %></li>
            <% else %>
            <li><%= link_to ' トップ', root_path, class: 'glyphicon glyphicon-home home' %></li>
            <li><%= link_to ' アバウト', homes_about_path, class: 'glyphicon glyphicon-link about' %></li>
            <li><%= link_to ' 新規登録', new_user_registration_path, class: 'glyphicon glyphicon-edit sign_up' %></li>
            <li><%= link_to ' ログイン', new_user_session_path, class: 'glyphicon glyphicon-log-in sign_in' %></li>
            <% end %>
          </ul>
        </nav>

      </div>
    </header>

    <%= yield %>

    <nav class="navbar navbar-default navbar-fixed-bottom">
      <div class="container-fluid">
        <div class="navbar-header">
            <h3>I'LL BE ..</h3>
        </div>
      </div>
    </nav>

  </body>
</html>
