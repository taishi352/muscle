<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<h1>会員編集画面</h1>

			<%= form_for(@user) do |f| %>
				<div class="field">
					<%= f.label :name %>
					<%= f.text_field :name, class: "name" %>
				</div>

				<div class="field">
					<%= f.label :image %>
					<%= f.attachment_field :profile_image, class: "user_image" %>
				</div>

				<div class="field">
					<%= f.label :introduction %>
					<%= f.text_area :introduction, class: "introduction" %>
				</div>

				<div class="actions">
					<%= f.submit %>
				</div>
			<% end %>
		</div>
	</div>
</div>