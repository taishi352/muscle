<div class="container">
	<h1>投稿一覧</h1>

	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th>User</th>
				<th>Title</th>
				<th>Genre</th>
			</tr>
		</thead>

		<tbody>
			<% @posts.each do |post| %>
			<tr>
				<td>
					<%= attachment_image_tag(post.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %><br>
					<%= post.user.name %>
				</td>
				<td><%= link_to post.title, post %></td>
				<td><%= post.genre.genre_name %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>