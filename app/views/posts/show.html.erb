<div class="container">
	<h1>投稿詳細画面</h1>

	<%= attachment_image_tag(@post.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %><br>
	<%= @post.user.name %><br>

	<%= @post.title %>
	<%= @post.genre.genre_name %>
	<%= attachment_image_tag(@post, :post_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %><br>
	<p>コメント件数:<%= @post.post_comments.count %></p>
	<% if @post.favorited_by?(current_user) %>
		<%= link_to post_favorites_path(@post), method: :delete do %>
			<span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span>
			<%= @post.favorites.count %>
		<% end %>
	<% else %>
		<%= link_to post_favorites_path(@post), method: :post do %>
			<span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
			<%= @post.favorites.count %>
		<% end %>
	<% end %>
	<%= @post.body %><br>

	<%= link_to "Edit",edit_post_path(@post.id), class: "btn-sm btn-success" %>
	<%= link_to "Destroy",post_path, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger" %>

	<table class="table">
		<% @post.post_comments.each do |post_comment| %>
		<tr>
			<td><%= post_comment.user.name %></td>
			<td><%= post_comment.comment %></td>
			<td>
				<% if @post.user.id == current_user.id %>
				<%= link_to "Destroy",post_post_comments_path(@post), method: :delete, class: "btn-sm btn-danger" %>
				<% end %>
			</td>
		</tr>
		<% end %>
	</table>
	<!-- コメント入力フォーム -->
	<%= form_for [@post, @post_comment] do |f| %>
		<%= f.text_area :comment, rows:'5', class: "form-control" %>
		<%= f.submit "送信" %>
	<% end %>
</div>